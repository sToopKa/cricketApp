<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="15dp">

    <TextView
        android:id="@+id/tvTitleArticle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lexend_bold"
        android:maxLines="4"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A cricket match" />

    <TextView
        android:id="@+id/tvArticleText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/lexend_bold"
        android:maxLines="4"

        android:textColor="@color/item_match_color"
        android:textSize="12sp"

        app:layout_constraintStart_toStartOf="@+id/tvTitleArticle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleArticle"
        tools:text="skgkje" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImage"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>